<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".GiveDietActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@drawable/gradientbackground"
        android:layout_height="198dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/titlepage"
                android:layout_marginTop="20dp"
                android:textSize="40sp"
                android:layout_marginBottom="28dp"
                android:textColor="#FFF"
                android:text="Yeni Bir Diet Ver"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <View
                android:background="#131E69"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="-100dp"
        android:orientation="vertical"
        android:background="@drawable/bg_item_todo"
        android:paddingTop="22dp"
        android:paddingBottom="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Yemek"
                android:textColor="#230075"
                android:layout_marginBottom="10dp"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/addFood"
                android:inputType="text"
                android:background="@drawable/bginputtask"
                android:hint="Yiyecek veya içecek"
                android:paddingLeft="12dp"
                android:textColorHint="#B5B5B5"
                android:textColor="#230075"
                android:layout_width="match_parent"
                android:layout_height="55dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Açıklama"
                android:textColor="#230075"
                android:layout_marginBottom="10dp"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/addComment"
                android:inputType="text"
                android:background="@drawable/bginputtask"
                android:hint="Dikkat edilmesi gereken hususlar"
                android:paddingLeft="12dp"
                android:maxLength="30"
                android:textColorHint="#B5B5B5"
                android:textColor="#230075"
                android:layout_width="match_parent"
                android:layout_height="55dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:background="@drawable/bgbtncreate"
            android:id="@+id/btnSaveBreakfast"
            android:textColor="#FFF"
            android:textAllCaps="false"
            android:text="Kahvaltıya Ekle"
            android:textSize="22sp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"/>

        <Button
            android:background="@drawable/bgbtncreate"
            android:id="@+id/btnSaveSnacks"
            android:textColor="#FFF"
            android:textAllCaps="false"
            android:text="Ara Öğüne Ekle"
            android:textSize="22sp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"/>
        <Button
            android:background="@drawable/bgbtncreate"
            android:id="@+id/btnSavelunch"
            android:textColor="#FFF"
            android:textAllCaps="false"
            android:text="Öğlene Ekle"
            android:textSize="22sp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"/>
        <Button
            android:background="@drawable/bgbtncreate"
            android:id="@+id/btnSaveSnacksNight"
            android:textColor="#FFF"
            android:textAllCaps="false"
            android:text="İkinci Ara Öğüne Ekle"
            android:textSize="22sp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"/>

        <Button
            android:background="@drawable/bgbtncreate"
            android:id="@+id/btnSaveDinner"
            android:textColor="#FFF"
            android:textAllCaps="false"
            android:text="Akşama Ekle"
            android:textSize="22sp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"/>

    </LinearLayout>



</LinearLayout>