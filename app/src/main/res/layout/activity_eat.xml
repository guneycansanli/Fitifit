            android:layout_height="wrap_content"
            android:background="@drawable/style_onbtn"
            android:text="Yemek"
            android:padding="10dp"
            android:textSize="30sp"
            android:textColor="#FFF"
            android:layout_margin="10dp"/>

        <Button
