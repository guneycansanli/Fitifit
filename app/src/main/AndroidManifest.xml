<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fitifit">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <queries>
        <intent>
            <action android:name="android.intent.action.GET_CONTENT" />

            <data android:mimeType="image/*" />
        </intent>
        <intent>
            <action android:name="android.media.action.IMAGE_CAPTURE" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_fitifit_app"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_fitifit_app_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Fitifit">
        <activity
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:name=".BmiResultActivity"></activity>
        <activity
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:name=".BmiCalculatorActivity" />
        <activity android:name=".MyUserToDoEdit" />
        <activity
            android:name=".StopWatchActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".FitStopWatchActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".MyUserToDo"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".NewTaskActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".UserToDo"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".SelectForTodo" />
        <activity android:name=".MessageDieticianActivity" />
        <activity android:name=".DieticianChatMainActivity" />
        <activity android:name=".ChatMainActivity" />
        <activity android:name=".MessageActivity" />
        <activity android:name=".PostActivity" />
        <activity android:name=".EditActivity" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity android:name=".ProfilesActivity" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AdminMainActivity" />
        <activity android:name=".fitifitAdmin" />
        <activity android:name=".DieticianRegisterActivity" />
        <activity android:name=".SelectAccound" />
        <activity
            android:name=".SettingsActivity"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".LoginActivity" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>